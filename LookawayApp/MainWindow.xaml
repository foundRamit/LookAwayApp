<Window x:Class="LookawayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lookaway App" Height="500" Width="700" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.1">
            <GradientStop Color="#FFF3E0" Offset="0"/>
            <GradientStop Color="#FFCCBC" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- App Title -->
            <TextBlock Text="Lookaway App" FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="10,5,10,20" Grid.Row="0">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF8E53" Offset="0"/>
                        <GradientStop Color="#FF6B6B" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>

            <!-- Timer Settings -->
            <Border Grid.Row="1" Background="#FFF3E0" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Timer Settings" FontSize="16" FontWeight="SemiBold"
                               Foreground="#FF5722" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="Work Duration (hh:mm:ss)" FontSize="14"
                                       HorizontalAlignment="Center" Foreground="#FF8E53"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="WorkHours" Width="40" FontSize="16" Text="00"/>
                                <TextBlock Text=" : " FontSize="16"/>
                                <TextBox x:Name="WorkMinutes" Width="40" FontSize="16" Text="00"/>
                                <TextBlock Text=" : " FontSize="16"/>
                                <TextBox x:Name="WorkSeconds" Width="40" FontSize="16" Text="00"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="10">
                            <TextBlock Text="Break Duration (mm:ss)" FontSize="14"
                                       HorizontalAlignment="Center" Foreground="#FF8E53"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="BreakMinutes" Width="40" FontSize="16" Text="00"/>
                                <TextBlock Text=" : " FontSize="16"/>
                                <TextBox x:Name="BreakSeconds" Width="40" FontSize="16" Text="00"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="SetTimerButton" Content="Set Timer" Click="SetTimer_Click"
                            Width="150" Height="40" Margin="0,15,0,5" HorizontalAlignment="Center">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF8E53" Offset="0"/>
                                <GradientStop Color="#FF6B6B" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Reminder Settings -->
            <Border Grid.Row="2" Background="#FFF3E0" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Reminder Settings (Blink Reminder)" FontSize="16" FontWeight="SemiBold"
                               Foreground="#FF5722" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBox x:Name="ReminderMinutes" Width="40" FontSize="16" Text="01"/>
                        <TextBlock Text=" : " FontSize="16"/>
                        <TextBox x:Name="ReminderSeconds" Width="40" FontSize="16" Text="00"/>
                    </StackPanel>

                    <Button x:Name="SetReminderButton" Content="Set Reminder" Click="SetReminder_Click"
                            Width="150" Height="35" Margin="0,10,0,0" HorizontalAlignment="Center">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF8E53" Offset="0"/>
                                <GradientStop Color="#FF6B6B" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Timer Controls & Display -->
            <StackPanel Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock x:Name="TimerDisplay" Text="00:00:00" FontSize="36" FontWeight="Bold"
                           HorizontalAlignment="Center" Foreground="#FF6B6B" Margin="0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <Button x:Name="StartButton" Content="Start" Click="StartButton_Click"
                            Width="100" Height="40" Margin="10">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4CAF50" Offset="0"/>
                                <GradientStop Color="#81C784" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click"
                            Width="100" Height="40" Margin="10">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F44336" Offset="0"/>
                                <GradientStop Color="#E57373" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
