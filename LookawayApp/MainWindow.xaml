<Window x:Class="LookawayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lookaway App" Height="400" Width="500" MinWidth="400" MinHeight="350"
        SizeToContent="Manual" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Title -->
            <RowDefinition Height="Auto"/>  <!-- Work & Break Inputs -->
            <RowDefinition Height="*"/>    <!-- Timer Display -->
            <RowDefinition Height="Auto"/> <!-- Control Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Lookaway App" FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,10"/>

        <!-- User Input for Work Timer (HH:MM:SS) -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Work Duration (HH:MM:SS):" FontSize="14" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="WorkHoursInput" Width="40" Text="00"/>
                <TextBlock Text=":" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="WorkMinutesInput" Width="40" Text="20"/>
                <TextBlock Text=":" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="WorkSecondsInput" Width="40" Text="00"/>
            </StackPanel>

            <TextBlock Text="Break Duration (MM:SS):" FontSize="14" HorizontalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="BreakMinutesInput" Width="40" Text="00"/>
                <TextBlock Text=":" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="BreakSecondsInput" Width="40" Text="20"/>
            </StackPanel>

            <Button Content="Set Timer" Click="SetTimer_Click" Margin="10" Padding="5" Width="120" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Timer Display -->
        <TextBlock Name="TimerDisplay" Text="00:20:00" FontSize="50" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="StartButton" Content="Start" Width="120" Height="40" Margin="5" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="Stop" Width="120" Height="40" Margin="5" Click="StopButton_Click"/>
        </StackPanel>

        <!-- Blurring Overlay -->
        <Rectangle Name="BlurOverlay" Fill="Black" Opacity="0.7" Visibility="Collapsed"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="4"/>

        <TextBlock Name="BreakMessage" Text="Time to take a break!" FontSize="24" FontWeight="Bold" 
                   Foreground="White" Visibility="Collapsed" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"/>
    </Grid>
</Window>
