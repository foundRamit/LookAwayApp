<Window x:Class="LookawayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lookaway App" Height="350" Width="400">
    <Grid>
        <!-- Main Content -->
        <TextBlock Text="Lookaway App" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
        
        <TextBlock Name="TimerDisplay" Text="00:20:00" FontSize="48" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <Button Name="StartButton" Content="Start" Width="100" Height="40" Margin="10" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="Stop" Width="100" Height="40" Margin="10" Click="StopButton_Click"/>
        </StackPanel>

        <!-- Blurring Overlay -->
        <Rectangle Name="BlurOverlay" Fill="Black" Opacity="0.7" Visibility="Collapsed"
                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        
        <TextBlock Name="BreakMessage" Text="Time to take a break!" FontSize="24" FontWeight="Bold" 
                   Foreground="White" Visibility="Collapsed" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>