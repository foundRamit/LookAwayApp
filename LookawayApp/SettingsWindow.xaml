<Window x:Class="LookawayApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="150" Width="300">
    <StackPanel Margin="10">
        <Label>Focus Time (seconds):</Label>
        <TextBox x:Name="FocusTimeTextBox"/>
        <Label>Rest Time (seconds):</Label>
        <TextBox x:Name="RestTimeTextBox"/>
        <Button Content="Save" Click="SaveSettings_Click" Margin="5"/>
    </StackPanel>
</Window>
